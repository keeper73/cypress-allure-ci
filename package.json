{
  "name": "cypress-allure-ci",
  "version": "1.0.0",
  "description": "Cypress automated testing process",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open --config ignoreTestFiles=*.js testFiles=**/*.feature",
    "cy:test": "cypress run --env allure=true --config ignoreTestFiles=*.js testFiles=**/*.feature"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keeper73/cypress-allure-ci.git"
  },
  "keywords": [
    "sdet",
    "cucumber",
    "cypress",
    "allure"
  ],
  "author": "keeper73",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keeper73/cypress-allure-ci/issues"
  },
  "homepage": "https://github.com/keeper73/cypress-allure-ci#readme",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.8.6",
    "cypress": "^8.0.0",
    "cypress-cucumber-preprocessor": "^4.1.4"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}
